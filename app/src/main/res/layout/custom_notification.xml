<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/numar"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numar Tren" />

    <TextView
        android:id="@+id/lastupdate"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Actualizat:" />

    <TextView
        android:id="@+id/statieplecare"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numar"
        android:text="Statie Origine" />

    <TextView
        android:id="@+id/locatie"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numar"
        android:layout_alignParentEnd="true"
        android:text="Locatie:" />

    <TextView
        android:id="@+id/statiesosire"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statieplecare"
        android:text="Statie Destinatie" />

    <TextView
        android:id="@+id/intarziere"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statieplecare"
        android:layout_alignParentEnd="true"
        android:text="Intarziere:" />
</RelativeLayout>